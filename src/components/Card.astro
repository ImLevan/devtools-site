---
import type { Tool } from '../utilities/ListTools';


interface Props {
    tool: Tool
}

const { tool } = Astro.props;
// import {Image} from "astro:assets";
---

<div
    class="relative flex items-center justify-center overflow-hidden rounded-lg border border-neutral-800 shadow-md hover:bg-gray-800 duration-500"
>
    <a
        class="p-8"
        href={tool.href || '#'}
        title={tool.title}
        target="_blank"
    >
        <picture class="w-19 h-20 flex-shrink-0">
            <!-- <Image              
                src={tool.imgtitle}
                alt={tool.title}
            /> -->
            <img src={tool.icon} alt={tool.title}>
        </picture>
        <h3 class="font-medium text-xl text-white pt-6">{tool.title}</h3>
        <div class="text-neutral-400">
            <p>
                {tool.description}
            </p>
        </div>
    </a>
</div>
